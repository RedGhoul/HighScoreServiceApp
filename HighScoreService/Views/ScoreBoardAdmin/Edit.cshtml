@model Domain.Entities.ScoreBoard

@{
    ViewData["Title"] = "Edit";
}
<div class="row mt-5">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <h2>Editing Score Board: <a style="color:crimson">@Model.Name</a></h2>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Game</label>
                <select asp-for="GameId" class="form-control" asp-items="ViewBag.GameId"></select>
                <span asp-validation-for="GameId" class="text-danger"></span>
            </div>
            <hr />
            <div class="row">
                <div class="col-6">
                    <div class="form-group update">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-6">
                    <a class="btn btn-primary" asp-action="ViewAllScoreBoards">Back to List</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3">
    </div>
</div>
<style>
    .btn.btn-primary {
        margin-left: 50px;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
