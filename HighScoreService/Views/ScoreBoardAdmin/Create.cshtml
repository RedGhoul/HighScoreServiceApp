@model Application.ViewModels.CreateScoreBoardViewModel


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>Create a new Score Board</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Select a Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-label-group">
                <label class="control-label">Select a Game</label>
                <select class="form-control" asp-for="GameId" asp-items="@Model.Games"></select>
                <span asp-validation-for="GameId" class="text-danger"></span>
            </div>
            <hr />
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-6">
                    <a class="btn btn-primary" asp-action="ViewAllScoreBoards">Back to List</a>
                </div>
            </div>

        </form>
    </div>
    <div class="col-md-2"></div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
