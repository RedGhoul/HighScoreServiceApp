@model Domain.Entities.Game

@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        
        <div>
            <h3>Are you sure you want to delete this?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Identifier)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Identifier)
                </dd>
                @if (Model.ScoreBoards.Count > 0)
                {
                    <dt class="col-sm-3">
                        Related Boards
                    </dt>
                    <dd class="col-sm-9">
                        @foreach (var item in Model.ScoreBoards)
                        {
                            <a>@item.Name</a>
                        }
                    </dd>
                }
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="btn btn-primary" asp-action="ViewAllGames">Back to List</a>
            </form>
        </div>
    </div>
    <div class="col-3"></div>
</div>

