@model Domain.Entities.Game

<h1>Create</h1>

<h4>ScoreBoard</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Your score board has been created</h5>
                    <p class="card-text">Here is your ScoreBoard Token: <b>@Model.ScoreBoards.FirstOrDefault().Name</b></p>
                    <p class="card-text">Use your token every time you make a call to our service</p>
                    <a href="~/swagger" class="btn btn-primary">Click me to see how to use it</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>