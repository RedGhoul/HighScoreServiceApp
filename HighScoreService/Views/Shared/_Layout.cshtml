<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>High Score Service</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">High Score Service</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li>
                        <a class="nav-item nav-link" asp-action="ViewAllGames" asp-controller="GamesAdmin">Games</a>
                    </li>
                    <li>
                        <a class="nav-item nav-link" asp-action="ViewAllScoreBoards" asp-controller="ScoreBoardAdmin">Boards</a>
                    </li>
                    <li>
                        <a class="nav-item nav-link" href="~/swagger/index.html" target="_blank" rel="noopener noreferrer">API Docs</a>
                    </li>

                    <li>
                        <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Profile</a>
                    </li>
                    <li>
                        <a class="nav-item nav-link" asp-action="Logout" asp-controller="Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li>
                        <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                    <li>
                        <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <main role="main" class="body">
        @RenderBody()
    </main>
</div>

<footer class="footer">
    <div class="container">
        <div class="row">

            <div class="col-sm-3 col-md-12 col-lg-4">
                <div class="footer-logo">

                    <a class="navbar-brand" href="#">HighScore</a>
                    <p>An easy way for video game developers to add leader boards to their games</p>

                </div>
            </div>

            <div class="col-sm-3 col-md-3 col-lg-2">
                <div class="list-menu">

                    <h4>About Us</h4>

                    <ul class="list-unstyled">
                        <li>
                            <a href="#">Coming Soon</a>
                        </li>

                    </ul>

                </div>
            </div>

            <div class="col-sm-3 col-md-3 col-lg-2">
                <div class="list-menu">

                    <h4>Contact Us</h4>

                    <ul class="list-unstyled">
                        <li>
                            <a href="#">Coming Soon</a>
                        </li>

                    </ul>

                </div>
            </div>

            <div class="col-sm-3 col-md-3 col-lg-2">
                <div class="list-menu">

                    <h4>Support</h4>

                    <ul class="list-unstyled">
                        <li>
                            <a href="#">Coming Soon</a>
                        </li>
                    </ul>

                </div>
            </div>

            <div class="col-sm-3 col-md-3 col-lg-2">
                <div class="list-menu">

                    <h4>Examples</h4>

                    <ul class="list-unstyled">
                        <li>
                            <a href="#">Coming Soon</a>
                        </li>
                    </ul>

                </div>
            </div>

        </div>
    </div>

    <div class="copyrights">
        <div class="container">
            <p>&copy; Copyrights HighScore. All rights reserved.</p>
            <div class="credits">

                Designed by Avaneesa Basappa
            </div>
        </div>
    </div>

</footer>

<a href="#" class="back-to-top">
    <i class="fa fa-chevron-up"></i>
</a>

